{% extends 'base.html.twig' %}

{% block title %}Restaurant index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Restaurant index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Region</th>
                <th>Departement</th>
                <th>Commune</th>
                <th>Localite</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Image</th>

                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for restaurant in restaurants %}
                <tr>
                    <td>{{ restaurant.id }}</td>
                    <td>{{ restaurant.nom }}</td>
                    <td>{{ restaurant.region }}</td>
                    <td>{{ restaurant.departement }}</td>
                    <td>{{ restaurant.commune }}</td>
                    <td>{{ restaurant.localite }}</td>
                    <td>{{ restaurant.latitude }}</td>
                    <td>{{ restaurant.longitude }}</td>
                    <td><img src="{{ vich_uploader_asset(restaurant.image, 'file') }}" class="img-thumbnail"/></td>
                    <td>
                        <a href="{{ path('restaurant_show', {'id': restaurant.id}) }}">show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
