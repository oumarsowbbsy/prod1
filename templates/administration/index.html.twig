                <td>{{ administration.localite }}</td>
                <td>{{ administration.longitude }}</td>
                <td>{{ administration.latitude }}</td>
                <td>{{ administration.email }}</td>
                <td>{{ administration.service }}</td>

                <td>
                    <a href="{{ path('administration_show', {'id': administration.id}) }}">show</a>
                </td>
            </tr>
